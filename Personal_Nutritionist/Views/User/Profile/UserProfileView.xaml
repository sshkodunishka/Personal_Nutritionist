<UserControl x:Class="Personal_Nutritionist.Views.User.UserProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:Personal_Nutritionist.Views.User"
             xmlns:valid="clr-namespace:Personal_Nutritionist.Helpers.Validation"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600" MinWidth="600">
    <Grid>
        <Rectangle Height="340" Fill="White" VerticalAlignment="Top" Margin="10,30" RadiusY="25" RadiusX="25">
            <Rectangle.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="15" RenderingBias="Quality" ShadowDepth="1"/>
            </Rectangle.Effect>
        </Rectangle>
        <StackPanel>
            <StackPanel Margin="120 35 0 0" Width="550" VerticalAlignment="Top"   
                        HorizontalAlignment="Center" Orientation="Horizontal">
                <Button  BorderBrush="#8408c7" Background="#c678f0"  Command="{Binding SetPrevDate}" >Prev</Button>
                <TextBlock Style="{StaticResource MaterialDesignCaptionTextBlock}" 
                   Text="{Binding SelectedDate, StringFormat='yyyy-MM-dd'}"
                   Margin="100 0 100 0" Foreground="#4d5680" FontSize="22"/>
                <Button  BorderBrush="#8408c7" Background="#c678f0"  Command="{Binding SetNextDate}">Next</Button>
            </StackPanel>
            <!--Total calories-->
            <StackPanel Margin="0 20 130 0" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock>Total Calories:</TextBlock>
                <TextBlock Margin="10 0 0 0" Text="{Binding TotalCalories}"></TextBlock>
            </StackPanel>
            <!--Calories Left-->
            <StackPanel Margin="0 20 130 0" HorizontalAlignment="Center" Orientation="Horizontal">
                <TextBlock>Calories Left:</TextBlock>
                <TextBlock Margin="10 0 0 0" Text="{Binding CaloriesLeft}"></TextBlock>
            </StackPanel>
            <!--Breakfast-->
            <Grid Margin="0 20 0 0" Width="400"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock 
                           HorizontalAlignment="Left"
                           Text="Breakfast:"
                           Grid.Column="0" />
                    <TextBlock Margin="20 0 0 0" 
                               Text="{Binding BreakfastFood}" 
                               Width="220"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Column="1">
                    <Button FontSize="12" Width="80" Height="23"
                            Content="Change" Command="{Binding ChangeBreakfast}"
                            VerticalAlignment="Center" Margin="0 0 10 0"
                             BorderBrush="#8408c7" Background="#c678f0" />
                </StackPanel>
            </Grid>
            <!-- Lunch -->
            <Grid Margin="0 20 0 0" Width="400"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock 
                           HorizontalAlignment="Left"
                           Text="Lunch:"
                           Grid.Column="0" />
                    <TextBlock Margin="20 0 0 0" 
                               Text="{Binding LunchFood}" 
                               Width="220"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Column="1">
                    <Button FontSize="12" Width="80" Height="23"
                            Content="Change" Command="{Binding ChangeLunch}"
                            VerticalAlignment="Center" Margin="0 0 10 0" 
                             BorderBrush="#8408c7" Background="#c678f0" />
                </StackPanel>
            </Grid>
            <!--Dinner-->
            <Grid Margin="0 20 0 0" Width="400"  HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock 
                           HorizontalAlignment="Left"
                           Text="Dinner:"
                           Grid.Column="0" />
                    <TextBlock Margin="20 0 0 0" 
                               Text="{Binding DinnerFood}" 
                               Width="220"
                               TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Grid.Column="1">
                    <Button FontSize="12" Width="80" Height="23"
                            Content="Change" Command="{Binding ChangeDinner}"
                            VerticalAlignment="Center" Margin="0 0 10 0"
                             BorderBrush="#8408c7" Background="#c678f0" Cursor="Hand" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
